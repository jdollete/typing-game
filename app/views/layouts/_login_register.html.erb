<!-- Registration Form -->
<ul class="nav navbar-nav navbar-right">
  <li>
    <button class="link" data-toggle="modal" data-target="#myModal">
      <span class="link-font">Register</span>
    </button>
  </li>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <div class="tab-pane" id="Registration">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <form id="register_form" class="form-horizontal" action="/users" method="post">
              <div class="form-group">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <label for="email" class="col-sm-2 control-label">Email:</label>
                <input class="form-control" type="email" name="user[email]" value=""  placeholder="Email" required>
              </div>
              <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Username:</label>
                <input class="form-control" type="text" name="user[username]" value="" placeholder="Username" maxlength="20" required>
              </div>
              <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password:</label>
                <input class="form-control" type="password" name="user[password]" value="" placeholder="Password"  required>
              </div>
              <div class="error_div">
                <ul class="error_register"></ul>
              </div>
              <div class="col-sm-10">
                <input class="btn btn-primary btn-sm" type="submit" name="" value="Register!">
                <button id="registration_cancel" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</ul>
<!-- Login Drop Down -->
<ul class="nav navbar-nav navbar-right">
  <li>
    <button id="login-button" class="link" data-toggle="modal" data-target="#myModalLogin">
      <span class="link-font">Login</span>
    </button>
  </li>
  <div class="modal fade" id="myModalLogin" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <div class="tab-pane active" id="Login">
              <form id="login_form" class="form-horizontal" action="/sessions" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <div class="form-group">
                  <div class="col-sm-10">
                    <label for="username" class="col-sm-2 control-label">Username:</label>
                    <input class="form-control" type="text" name="session[username]" value="">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10">
                    <label for="password" class="col-sm-2 control-label">Password:</label>
                    <input class="form-control" type="password" name="session[password]" value="">
                  </div>
                </div>
                <div class="error_div">
                  <ul class="error_login"></ul>
                </div>
                <div class="col-sm-10">
                  <input class="btn btn-primary btn-sm" type="submit" name="" value="Login!">
                  <button id="login_cancel" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</ul>
